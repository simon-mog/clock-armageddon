<Window xmlns:View="clr-namespace:AnalogClock.View"  x:Class="AnalogClock.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnalogClock"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:Interactivity="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:Core="clr-namespace:Microsoft.Expression.Interactivity.Core;assembly=Microsoft.Expression.Interactions"
        xmlns:vm="clr-namespace:AnalogClock.ViewModel"
        mc:Ignorable="d"
        Title="Analog Clock"
        WindowStyle="None"
        AllowsTransparency="True"
        Cursor="SizeAll"
        Background="#00000000"
        Topmost="True">
    <!-- Width, Height のBindingはできなかったため、.xaml.csで初期化する -->

    <!-- DataContext -->
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <!-- リソース定義 -->
    <Window.Resources>
        <!-- 時計の直径 -->
        <system:Double x:Key="ClockSize">200</system:Double>
        
        <!-- 秒刻み背景の座標計算用。xamlに直書きするのでリソースとしては使っていない。 -->
        <!-- tan(π/(2*15))*(ClockSize/2) -->
        <system:Double x:Key="HalfClockSizeXTanPiOver30">10.51042352</system:Double>
        <!-- 360/60 (1秒の角度) -->
        <system:Double x:Key="AnglePerSecond">6</system:Double>

        <!-- 数字 -->
        <Style x:Key="NumberTextBlock" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>

        <!-- 時計全体の形 -->
        <Style x:Key="ClockFrameBorder" TargetType="{x:Type Border}">
            <!-- 時計のサイズと同等の -->
            <Setter Property="Width" Value="{StaticResource ClockSize}"/>
            <Setter Property="Height" Value="{StaticResource ClockSize}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="CornerRadius" Value="100"/> <!-- 2倍してClockSize以上の値になれば円形 -->
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Gray" Offset="0"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="LightGray" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 秒目盛りの基本形 -->
        <Style x:Key="SecondScaleRectangle" TargetType="{x:Type Rectangle}">
            <Setter Property="Width" Value="{Binding Path=SecondScaleSize.Width}"/>
            <Setter Property="Height" Value="{Binding Path=SecondScaleSize.Height}"/>
            <Setter Property="Fill" Value="Black"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>
        <Style x:Key="SecondScaleRectangle5" TargetType="{x:Type Rectangle}" BasedOn="{StaticResource SecondScaleRectangle}">
            <Setter Property="Width" Value="{Binding Path=SecondScaleSize5.Width}"/>
            <Setter Property="Height" Value="{Binding Path=SecondScaleSize5.Height}"/>
        </Style>
        
        <!-- 残時間刻み背景のスタイル -->
        <Style x:Key="SecondBackground" TargetType="{x:Type Path}">
            <!--<Setter Property="Fill" Value="#80FFFF00"/>-->
            <Setter Property="StrokeThickness" Value="0"/>
            <Setter Property="Data" Value="M 99,0 99,99 109.51042352,0 Z"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/> <!-- 0～1秒の範囲の三角形を初期位置とするので、時計の中心(0.5,0.5)を基準に回転する -->
        </Style>
        
        <!-- 透過トグルボタンのスタイル -->
        <Style x:Key="TransparentToggleButton" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                Padding="1">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Arrow"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="FALSE">
                    <Setter Property="Background" Value="#D8DDDDDD"/>
                    <Setter Property="Foreground" Value="#D8000000"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="TRUE">
                    <Setter Property="Background" Value="#D8232323"/>
                    <Setter Property="Foreground" Value="#D8F8F8F8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="Transparentbutton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#B0DDDDDD"/>
            <Setter Property="Foreground" Value="#E0000000"/>
            <Setter Property="Cursor" Value="Arrow"/>
        </Style>
        
    </Window.Resources>

    <!-- コンテキストメニュー -->
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="ヘルプ" Command="{Binding Path=ShowHelp}"/>
            <MenuItem Header="作成者" Command="{Binding Path=ShowCreator}"/>
            <MenuItem Header="終了" Command="{Binding Path=ClosingCommand}"/>
        </ContextMenu>
    </Window.ContextMenu>

