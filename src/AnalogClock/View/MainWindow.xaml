            <Border.RenderTransform>
                <TransformGroup>
                    <TranslateTransform X="{Binding Path=ShadowSize}" Y="{Binding Path=ShadowSize}"/>
                </TransformGroup>
            </Border.RenderTransform>
            <Border.Background>
