                </TransformGroup>
            </Border.RenderTransform>
            <Border.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#CC000000" Offset="0"/>
                    <GradientStop Color="#CC000000" Offset="0.9"/>
                    <GradientStop Color="#00000000" Offset="1"/>
                </RadialGradientBrush>
            </Border.Background>
        </Border>

