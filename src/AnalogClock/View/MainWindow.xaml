<Window xmlns:View="clr-namespace:AnalogClock.View"  x:Class="AnalogClock.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnalogClock"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:Interactivity="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:Core="clr-namespace:Microsoft.Expression.Interactivity.Core;assembly=Microsoft.Expression.Interactions"
        xmlns:vm="clr-namespace:AnalogClock.ViewModel"
        mc:Ignorable="d"
        Title="Analog Clock"
        WindowStyle="None"
        AllowsTransparency="True"
        Cursor="SizeAll"
        Background="#00000000"
        Topmost="True">
    <!-- Width, Height のBindingはできなかったため、.xaml.csで初期化する -->

    <!-- DataContext -->
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <!-- リソース定義 -->
    <Window.Resources>
        <!-- 時計の直径 -->
        <system:Double x:Key="ClockSize">200</system:Double>

        <!-- 数字 -->
        <Style x:Key="NumberTextBlock" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>

        <!-- 時計全体の形 -->
        <Style x:Key="ClockFrameBorder" TargetType="Border">
            <Setter Property="Width" Value="{StaticResource ClockSize}"/>
            <Setter Property="Height" Value="{StaticResource ClockSize}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="CornerRadius" Value="100"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Gray" Offset="0"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="LightGray" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 秒目盛りの基本形 -->
        <Style x:Key="SecondScaleRectangle" TargetType="Rectangle">
            <Setter Property="Width" Value="{Binding Path=SecondScaleSize.Width}"/>
            <Setter Property="Height" Value="{Binding Path=SecondScaleSize.Height}"/>
            <Setter Property="Fill" Value="Black"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>
        <Style x:Key="SecondScaleRectangle5" TargetType="Rectangle" BasedOn="{StaticResource SecondScaleRectangle}">
            <Setter Property="Width" Value="{Binding Path=SecondScaleSize5.Width}"/>
            <Setter Property="Height" Value="{Binding Path=SecondScaleSize5.Height}"/>
        </Style>

    </Window.Resources>

    <!-- コンテキストメニュー -->
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Close" Command="{Binding Path=ClosingCommand}"/>
        </ContextMenu>
    </Window.ContextMenu>

